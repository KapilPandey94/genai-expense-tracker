<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White background -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#D0D0D0" /> <!-- light gray -->

    <!-- Optional padding inside if used with a background -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>
