<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Card background color -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Light gray stroke for border -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- soft gray -->

    <!-- Optional padding inside if used as background -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
