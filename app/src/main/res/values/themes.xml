<resources>

    <!-- Base Theme -->
    <style name="Base.Theme.GenAIExpenseTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Disable the default ripple highlight -->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="materialThemeOverlay">@null</item>

        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:tint">@null</item> <!-- avoid gray overlays -->

        <!-- Prevent background & foreground blending -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

    </style>

    <!-- App Theme (used in AndroidManifest) -->
    <style name="Theme.GenAIExpenseTracker" parent="Base.Theme.GenAIExpenseTracker" />

    <!-- Hint Appearance (used in TextInputLayout) -->
    <style name="FloatingHintGrey" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
