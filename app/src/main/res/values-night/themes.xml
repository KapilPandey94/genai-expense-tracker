<resources>

    <!-- Base Theme for Night Mode -->
    <style name="Base.Theme.GenAIExpenseTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- Floating Hint Fix -->
        <item name="colorOnSurfaceVariant">@color/grey</item>

        <!-- Status bar and background -->
        <item name="android:statusBarColor">@color/my_primary</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Optional: disable elevation overlay for flat look -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3</item>
    </style>

    <!-- App Theme for Night Mode -->
    <style name="Theme.GenAIExpenseTracker" parent="Base.Theme.GenAIExpenseTracker" />

    <!-- Hint Appearance -->
    <style name="FloatingHintGrey" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
