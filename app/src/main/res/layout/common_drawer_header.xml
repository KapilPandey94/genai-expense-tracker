<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Profile Image with overlay "+" icon -->
    <FrameLayout
        android:id="@+id/profile_image_section"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user_profile_icon_bg"
            android:clipToOutline="true"
            android:contentDescription="Profile Image"
            android:elevation="2dp"
            android:src="@drawable/ic_person_icon" />

        <!-- Overlay "+" Icon -->
        <ImageView
            android:id="@+id/icon_add_photo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="2dp"
            android:background="@drawable/user_profile_icon_bg"
            android:contentDescription="Add Profile Icon"
            android:elevation="6dp"
            android:padding="4dp"
            android:src="@drawable/ic_add_photo" />
    </FrameLayout>

    <!-- User Email -->
    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="user@example.com"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>